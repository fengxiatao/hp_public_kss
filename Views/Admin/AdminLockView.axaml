                                        <Button Grid.Row="1" Grid.Column="0"
                                                Classes="locker-button"
                                                Command="{Binding #AdminLockControl.DataContext.OnLockerClickCommand}"
                                                CommandParameter="{Binding SmallLockers[0]}"
                                                IsEnabled="{Binding SmallLockers[0].IsEnabled}"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border Name="border"
                                                            BorderBrush="#979797"
                                                            BorderThickness="1"
                                                            CornerRadius="0"
                                                            Background="{Binding SmallLockers[0].DisplayColor}">
                                                        <Grid>
                                                            <!-- 正常状态显示数字 -->
                                                            <TextBlock Text="{Binding SmallLockers[0].DisplayNumber}"
                                                                       FontSize="18" Foreground="#5C5C5C"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                                            <!-- 打开状态显示图标 -->
                                                            <Border Background="#4CAF50" CornerRadius="2" Padding="2"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                                                    Width="16" Height="16"
                                                                    IsVisible="{Binding SmallLockers[0].IsOpened}">
                                                                <TextBlock Text="✓" FontSize="10" Foreground="White"
                                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                           FontWeight="Bold"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
