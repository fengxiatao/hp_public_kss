<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
             xmlns:vm="clr-namespace:FaceLocker.ViewModels"
             xmlns:conv="clr-namespace:FaceLocker.Converters"
             x:DataType="vm:AdminLockViewModel"
             x:Class="FaceLocker.Views.AdminLockView"
             x:Name="AdminLockControl">

    <UserControl.Styles>
        <!-- 格子按钮样式 -->
        <Style Selector="Button.locker-button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="#979797"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="Button.locker-button:pointerover">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#0069C0"/>
        </Style>

        <Style Selector="Button.locker-button:disabled">
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <conv:SmallLockerStatusToEnabledConverter x:Key="SmallLockerStatusToEnabledConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid Margin="0">
            <!-- 柜子区和一键清柜按钮为子Grid -->
            <Grid Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--文本区域：对齐柜子区左边 -->
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <!-- 主机名 -->
                    <StackPanel Orientation="Horizontal" Spacing="2">
                        <TextBlock Text="主机名："
                                   FontSize="20"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DeviceName}"
                                   FontSize="20"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- IP地址 -->
                    <StackPanel Orientation="Horizontal" Spacing="2">
                        <TextBlock Text="IP地址："
                                   FontSize="20"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding IPAddress}"
                                   FontSize="20"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 柜组名称 -->
                    <StackPanel Orientation="Horizontal" Spacing="2">
                        <TextBlock Text="柜组名称："
                                   FontSize="20"
                                   Foreground="Black"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding GroupName}"
                                   FontSize="20"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- 按钮区域：对齐柜子区右边 -->
                <Button Grid.Row="0" Grid.Column="0"
                        Content="一键清柜"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,12"
                        Padding="16,6"
                        Height="32"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Background="#5BBC72"
                        Command="{Binding ClearAllCommand}"
                        IsEnabled="{Binding CanClearAll}"/>

                <!-- 柜子区域（带边框和背景） -->
                <Border Grid.Row="1" Grid.Column="0"
                        BorderBrush="#FFFFFF"
                        BorderThickness="1"
                        Background="#FFFFFF"
                        Width="1158"
                        Height="485">
                    <ItemsControl ItemsSource="{Binding Lockers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10" FlowDirection="{Binding LockerFlowDirection}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:LockerItem">
                                <Border BoxShadow="0 0 10 0 #4D000000"
                                        Width="223.5" Height="485"
                                        BorderBrush="#979797" BorderThickness="2" Background="#ffffff">
                                    <Grid Margin="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="38.5"/>
                                            <RowDefinition Height="74"/>
                                            <RowDefinition Height="74"/>
                                            <RowDefinition Height="74"/>
                                            <RowDefinition Height="74"/>
                                            <RowDefinition Height="74"/>
                                            <RowDefinition Height="74"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 柜子标题 -->
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                Background="#0069C0" BorderBrush="#979797" BorderThickness="1" CornerRadius="0">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontSize="18" FontWeight="Bold" Foreground="White"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

